{
	"id": "heatit-z-han2",
	"name": {
    	"en": "Z-HAN2"
	},
  
	"class": "sensor",
	"capabilities": [
		"meter_power",
		"meter_power.imported",
		"meter_power.exported",
		"measure_power",
		"measure_voltage",
		"measure_current",
		"measure_temperature",
		"button.reset_meter"
	],

	"capabilitiesOptions": {
		"measure_power": {
			"approximated": true
		},
		"meter_power.imported": {
      		"title": { "en": "Imported Energy" }
    	},
    	"meter_power.exported": {
      		"title": { "en": "Exported Energy" }
    	},
		"button.reset_meter": {
			"maintenanceAction": true,
			"title": {
				"en": "Reset power meter"
			},
			"desc": {
				"en": "Reset the accumulated power usage (kWh), note that this can not be reversed."
			}
		}
  	},

	"energy": {
		"cumulative": true,
		"cumulativeImportedCapability": "meter_power.imported",
    	"cumulativeExportedCapability": "meter_power.exported"
	},

	"platforms": [ "local", "cloud" ],
	"connectivity": [ "zwave" ],

	"icon": "{{driverAssetsPath}}/icon.svg",
	"images": {
  		"small": "{{driverAssetsPath}}/images/small.png",
  		"large": "{{driverAssetsPath}}/images/large.png"
  	},
	"zwave": {
		"manufacturerId": 411,
	  	"productTypeId": 98,
		"productId": 25089,
		"security": ["none"],
		"zwaveAllianceProductId": 4899,
		"zwaveAllianceProductDocumentation": "https://products.z-wavealliance.org/products/4899",
	  	"learnmode": {
		  	"image": "{{driverAssetsPath}}/learnmode.svg",
		  	"instruction": {
				"en": "Press the reset button on the device 3 times in a rapid sequence."
		  	}
	  	},
	  	"associationGroups": [1],
	  	"associationGroupsOptions": {
		  	"1": {
			  	"hint": {
				  	"en": "Lifeline association group (do not change)"
			  	}
			},
		  	"2": {
				"hint": {
					"en": "Meter report: Meter report kWh and W to be sent to other devices"
				}
			}
		}
	}
}